<% layout('layouts/base-game') -%>
<script>
	$(document).ready(function () {
		$(".navbar-youplay").css({ "background": "transparent" })
		$(".welcome-msg").hide()
		$("#gameContainer").css({ "z-index": "999999" })
	})
</script>
