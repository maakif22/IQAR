<% layout('layouts/base') -%>
<style type="text/css">
    .rm-border {
        border-left-color: #fff !important;
        border-right-color: #fff !important;
    }

    td {
        cursor: pointer;
    }

    .dt-buttons,
    .sorting {
        display: none
    }
</style>
<section class="content-header">
</section>
<section class="content">
    <form method="post">
        <input type="hidden" name="area" value="outbox">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Outbox</h3>
            </div>
            <div class="box-body">
                <div style="clear: both;"></div>
                <div class="mailbox-controls">
                    <!-- Check all button -->

                    <button type="button" class="checkbox-toggle myCheckBox btn btn-sm btn-default"><i class="fa fa-square-o"></i>
                    </button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger btn-sm" id="delinboxmsg"><i class="fa fa-trash-o"></i></button>
                    </div>
                </div>
                <div class="data-table">
                    <table class="table table-hover table-striped" id="example">
                        <thead>
                            <tr style="border:none;">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(outbox.length >0){ %>
                            <% outbox.forEach(function(el , i) {%>
                            <tr data-toggle="tooltip" title="Click to read">
                                <td><input type="checkbox" class="myCheckBox" name="msgdel[]" value="<%= el.id %>"></td>
                                <td class="rm-border" onclick="window.location='/controlpanel/readmessage/<%=el.id%>';">
                                    <%= el.firstname %>
                                </td>
                                <td class="rm-border" onclick="window.location='/controlpanel/readmessage/<%=el.id%>';">
                                    <%= el.subject %>
                                </td>
                                <td class="rm-border" onclick="window.location='/controlpanel/readmessage/<%=el.id%>';">
                                    <%= new Date(el.created_on).toDateString()%>
                                </td>

                                <td>
                                    <i data-ids="<%= el.id %>" class="fa fa-trash-o delSingle"> </i>
                                </td>
                            </tr>
                            <% })
                    }%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</section>