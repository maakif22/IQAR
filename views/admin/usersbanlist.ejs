<% layout('layouts/base') -%>
<section class="content-header">
    <h1>
        <small>Banned Users</small></h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Users</h3>
            <!--<div class="box-tools pull-right">
                <button type="button" data-widget="collapse" data-toggle="tooltip" title="collapse" class="btn btn-box-tool"><i class="fa fa-minus"></i></button>
            </div>-->
        </div>
        <div class="box-body">
            <div style="clear: both;"></div>
            <button type="button" class="check btn btn-sm btn-default">
                <i class="fa fa-square-o"></i></button>
            <!--<input type="button" class="delete" value="Delete" disabled />-->
            <!-- <button type="button" class="delete btn btn-default btn-sm" disabled><i class="fa fa-trash-o"></i></button> -->
            <button type="button" class="terminate btn btn-sm btn-danger" disabled title="Terminate users"><i class="fa fa-trash"></i>
                terminate users</button>
            <div class="data-table mt-20">
                <table class="table table-bordered" id="example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Country</th>
                            <th>Join</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% i=1; users.forEach(function(user) { %>
                        <tr>
                            <td><input data-status="<%= user.status %>" type="checkbox" class="cb-element" name="msgdel[]"
                                    value="<%=user.id%>"></td>
                            <td>
                                <% if(user.online == 'y'){%>
                                <div style="width: 10px; height: 10px; background-color: green; display: inline-block; border-radius: 5px;"></div>
                                <%}else{%>
                                <div style="width: 10px; height: 10px; background-color: red; display: inline-block; border-radius: 5px;"></div>
                                <%} %>
                                <%= user.firstname %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.phone %>
                            </td>
                            <td>
                                <%= user.country %>
                            </td>
                            <td>
                                <%= new Date(+user.joined).toDateString()%>
                            </td>
                            <td>
                                <div style="display:inline-block">
                                    <form method="post" action="users/terminate">
                                        <input type="hidden" name="id" value="<%= user.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% i++;}); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>