        <li>
            <a href="#"> <i class="fa fa-dashboard"></i>Level </a>
        </li>
        <li class="active">Here </li>
    </ol>-->
</section>
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Pages</h3>
            <!--<div class="box-tools pull-right">
                <button type="button" data-widget="collapse" data-toggle="tooltip" title="collapse" class="btn btn-box-tool"><i class="fa fa-minus"></i></button>
            </div>-->
        </div>
        <div class="box-body"><a href="pages/add" class="pull-left btn btn-primary"><i class="fa fa-plus"> </i> New Page</a>
          <div style="clear: both;"></div>
            <div class="data-table">
                <table class="table table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Slug</th>
                            <th>Created At</th> 
                            <th>Published</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>    
                        <% i=1; pages.forEach(function(page) { %>
                        <tr>
                            <td><%= page.page_title %></td>
                            <td><%= page.slug %></td>
                            <td><%= new Date(+page.created_at).toDateString()%></td>
                            <td><%= page.status %></td>
                            <td>
                                <div style="display:inline-block"><a href="pages/edit/<%= page.id %>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a></div>
                                <div style="display:inline-block">
                                <form method="post" action="pages/delete/<%= page.id %>">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-remove"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% i++;}); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

