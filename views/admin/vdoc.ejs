<% layout('layouts/base') -%>
<section class="content-header">
    <h1>
        <small>User's Verification Documents</small></h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Uploaded Documents</h3>
            <!--<div class="box-tools pull-right">
                <button type="button" data-widget="collapse" data-toggle="tooltip" title="collapse" class="btn btn-box-tool"><i class="fa fa-minus"></i></button>
            </div>-->
        </div>
        <div class="box-body">
            <div style="clear: both;"></div>
            <div class="data-table">
                <table class="table table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Document</th>
                            <th>Verification Status</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% i=1; users.forEach(function(user) { %>
                        <tr>
                            <td>
                                <%= user.firstname %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.phone %>
                            </td>
                            <td>
                                <% if(user.vdoc){ %>
                                <a href="#" class="pop">
                                    <img src="../../users/<%=user.id%>/doc/<%=user.vdoc%>" style="width: 40px; height: 40px;"
                                        title="Click to enlarge"></a>
                                <% }else{%>
                                No Document
                                <%}%>
                            </td>
                            <td>
                                <% if(user.verification_status == '1'){%>
                                <div style="width: 10px; height: 10px; background-color: green; display: inline-block; border-radius: 5px;"></div>
                                <%}else{%>
                                <div style="width: 10px; height: 10px; background-color: red; display: inline-block; border-radius: 5px;"></div>
                                <%} %>
                            </td>
                            <td>
                                <form method="POST" action="/controlpanel/users/verification/approve">
                                    <input type="hidden" name="status" value="<%= user.verification_status %>">
                                    <input type="hidden" name="id" value="<%= user.id %>">

                                    <input title="Click to change status" <% if(user.verification_status==1){ %>
                                    class="btn-sm btn btn-success" value="ON"
                                    <% }else{ %> class="btn btn-sm btn-danger" value="OFF"
                                    <%} %> type="submit">
                                </form>
                            </td>
                        </tr>
                        <% i++;}); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>