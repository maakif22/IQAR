<% layout('layouts/base') -%>
<section class="content-header">
    <h1> 
Edit Users<small>menu for editing user data</small></h1>
    <ol class="breadcrumb">
        <li>
            <a href="#"> <i class="fa fa-dashboard"></i>Level </a>
        </li>
        <li class="active">Here </li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Users</h3>
            <div class="box-tools pull-right">
                <button type="button" data-widget="collapse" data-toggle="tooltip" title="collapse" class="btn btn-box-tool"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <form method="POST" action="/controlpanel/users/update">
        <div class="box-body">
           
                <input type="hidden" name="id" value="<%=user.id%>">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="box-body">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" value="<%=user.firstname%>" name="firstname"  placeholder="Enter Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" value="<%=user.lastname%>" name="lastname" placeholder="Enter Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" value="<%=user.email%>" name="email" placeholder="Enter Address" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" value="<%=user.phone%>" name="phone" placeholder="Enter Phone" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <textarea name="address" class="form-control"><%=user.res_address%></textarea>
                            </div>

                        </div>
                        <div class="box-footer">
                            <a href="/controlpanel/users" class="btn btn-primary">Back</a>
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-pencil"> </i> Update</button>
                        </div>
                    </div>
                </div>
           
        </div> 
    </form>
    </div>
</section>