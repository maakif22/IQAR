<% layout('layouts/base') -%>
<section class="content-header">
    <h1>
        Create Tournament</small></h1>

</section>
<section class="content">
    <div class="box">
        <div class="box-header with-border">
        </div>
        <div class="box-body">
            <form action="/controlpanel/createtournament" onsubmit="validate(this)" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="box-body">
                            <div class="form-group">
                                <input id="name" required type="text" name="name" placeholder="Type Tournament name"
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Start Date</label>
                                <input required type="date" id="strd" name="start_date" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>End Date</label>
                                <input required type="date" id="end" name="end_date" class="form-control">
                            </div>
                            <div class="form-group">
                                <input required type="file" id="file" name="image">
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="Create">
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</section>
<script>
    function validate(el) {
        e.preventDefault()
        console.log(el)
    }
</script>